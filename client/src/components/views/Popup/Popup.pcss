@import "../../../styles/mixins.pcss";

.popup {
	@mixin flex-center;
	@mixin square;

	position: fixed;
	overflow: auto;
	background-color: rgba(0, 0, 0, 0.5);

	&__body {
		height: 550px;
		width: 400px;

		display: flex;
		flex-direction: column;
		background-color: var(--popup-background-color);
		border-radius: 32px;
		padding: 30px;
		box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
		transition: opacity 0.3s, transform 0.3s;
		border: solid;
		text-align: center;
	}
}
