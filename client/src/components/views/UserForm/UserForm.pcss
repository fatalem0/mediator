.user-form {
	height: 100%;

	&__icon {
		height: 3em;
	}

	&__submit-button {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		margin: auto;
		width: 50%;
		height: 40px;

		&__body {
			font-weight: 400;
			font-size: 1.5em;
			line-height: 1;
		}
	}
}
